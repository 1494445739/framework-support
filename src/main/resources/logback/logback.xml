<?xml version="1.0" encoding="utf-8"?>
<configuration>

    <contextName>tzg</contextName>

    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                <![CDATA[
                    %d{HH:mm:ss.SSS} [%X{clientID}] [%thread] %-5level %X{req.remoteHost} %X{req.requestURI} %logger{100}[%L] - %msg%n
                ]]>
            </pattern>
        </encoder>
    </appender>

    <appender name="file-debug" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/debug.log</file>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>DEBUG</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>
                <![CDATA[
                    logs/backup/%d/debug/debug.%d.%i.log.gz
                ]]>
            </fileNamePattern>
            <!-- log file size control -->
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <!-- save 90 days work -->
            <MaxHistory>90</MaxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>
                <![CDATA[
                    %d{HH:mm:ss.SSS} [%X{clientID}] [%thread] %-5level %X{req.remoteHost} %X{req.requestURI} %logger{100}[%L] - %msg%n
                ]]>
            </pattern>
        </encoder>
    </appender>

    <!-- file output. Level: INFO. -->
    <appender name="file-info" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/info.log</file>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>INFO</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>
                <![CDATA[
                    logs/backup/%d/info/debug.%d.%i.log.gz
                ]]>
            </fileNamePattern>
            <!-- log file size control -->
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <MaxHistory>90</MaxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>
                <![CDATA[
                    %d{HH:mm:ss.SSS} [%X{clientID}] [%thread] %-5level %X{req.remoteHost} %X{req.requestURI} %logger{100}[%L] - %msg%n
                ]]>
            </pattern>
        </encoder>
    </appender>

    <appender name="file-warn" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/warn.log</file>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>WARN</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>
                <![CDATA[
                    logs/backup/%d/warn/warn.%d.%i.log.gz
                ]]>
            </fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <MaxHistory>90</MaxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>
                <![CDATA[
                    %d{HH:mm:ss.SSS} [%X{clientID}] [%thread] %-5level %X{req.remoteHost} %X{req.requestURI} %logger{100}[%L] - %msg%n
                ]]>
            </pattern>
        </encoder>
    </appender>

    <appender name="file-error" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/error.log</file>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>
                <![CDATA[
