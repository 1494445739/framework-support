                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <MaxHistory>90</MaxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>
                <![CDATA[
                    %d{HH:mm:ss.SSS} [%X{clientID}] [%thread] %-5level %X{req.remoteHost} %X{req.requestURI} %logger{100}[%L] - %msg%n
                ]]>
